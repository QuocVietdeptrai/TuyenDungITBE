{
  "compilerOptions": {
    "target": "ES6",                   // Biên dịch về ES6 (ECMAScript 2015)
    "module": "CommonJS",              // Hỗ trợ module của Node.js
    "moduleResolution": "node",        // Hỗ trợ import module từ node_modules
    "esModuleInterop": true,           // Dùng import thay require (interop giữa ESModules và CommonJS)
    "resolveJsonModule": true,         // Cho phép import file JSON như import module JS
    "strict": true                     // Bật chế độ kiểm tra chặt chẽ (giúp phát hiện lỗi rõ hơn)
  }
}
